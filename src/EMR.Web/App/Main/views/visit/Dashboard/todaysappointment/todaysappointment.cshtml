<div class="x_panel tile autoheight padding-bottom100" id="appointment" ng-controller="app.views.todaysappointment as vm">
    <div class="x_title">
        <h2>
            Today's Appointment
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="table-responsive">
            <div class="col-sm-8 col-xs-8 col-md-8">
                <input ng-model="vm.searchQuery" placeholder="Global search" class="input-sm form-control" type="search" />
            </div>
            <div class="col-sm-2 col-xs-2 col-md-2">
                <button type="button" ng-click="vm.searchQuery = ''" class="btn btn-sm btn-primary">
                    <i class="fa fa-eraser margin-right5"></i>Clear Filter
                </button>
            </div>
            <div class="col-sm-2 col-xs-2 col-md-2">
                <button type="button" ng-click="vm.refresh()" class="btn btn-sm btn-primary">
                    <i class="fa fa-refresh margin-right5"></i>Refresh
                </button>
            </div>
            <table class="table table-hover table-striped" st-table="displayedCollection" st-safe-src="vm.todaysAppointment" sttablefilter="vm.searchQuery">
                <thead class="thead-inverse">
                    <tr class="abp-clickable">

                        <th st-sort="title">@L("PatientIdentifier")</th>
                        <th st-sort="title">@L("Title")</th>
                        <th st-sort="fname">@L("Name")</th>
                        <th st-sort="fname">@L("Provider")</th>
                        <th st-sort="administrationSiteName">@L("AdministrationSiteName")</th>
                        <th st-sort="note">@L("Time")</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="appointment in (displayedCollection)" class="abp-clickable" ng-click="vm.openTodaysAppointmentDetailModal()">
                        <td>{{appointment.pid}}</td>
                        <td>{{appointment.title}}</td>
                        <td>{{appointment.fname}} {{appointment.mname}} {{appointment.lname}}</td>
                        <td>{{appointment.providerName}}</td>
                        <td>{{appointment.administrationSiteName}}</td>
                        <td>{{appointment.startDate | utctolocal :'h:mm:ss a'}}</td>


                    </tr>
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="6" class="text-center">
                            <div st-pagination="" st-items-by-page="vm.itemsByPage" st-displayed-pages=""></div>
                        </td>
                    </tr>
                </tfoot>
            </table>

        </div>
    </div>
</div>