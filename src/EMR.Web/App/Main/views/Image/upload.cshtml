                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("Category")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <select class="form-control"
                                ng-model="upload.documentCategoryCodeId"
                                ng-options="item.documentCategoryCodeId as item.documentCategoryCodeName for item in upload.documentCategoryCodeData"></select>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("Type")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <select class="form-control"
                                ng-model="upload.documentTypeCodeId"
                                ng-options="item.documentTypeCodeId as item.documentTypeCodeName for item in upload.documentTypeCodeData"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("Description")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <input ng-model="upload.documentDescription"
                               class="form-control"
                               name="documentDescription"
                               data-validate-length="255">
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <span>{{upload.uploadfile.name}}</span>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("Note")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <textarea class="form-control" rows="5" ng-model="upload.note"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <uib-progressbar max="max" type="success" value="upload.progress"><span style="color: white; white-space: nowrap;">{{upload.progress}} / 100</span></uib-progressbar>
            </div>
        </div>
