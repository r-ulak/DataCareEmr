    <div class="x_content">
        <div class="row">
            <p class="error">{{upload.error}}</p>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("DocumentUpload")</label>
                    <label class="btn btn-default btn-file">
                        <i class="fa fa-cloud-upload margin-right10 text-success"></i>Browse File to Upload<input type="file" fileread="upload.uploadfile" class="hidden" name="myFile" />
