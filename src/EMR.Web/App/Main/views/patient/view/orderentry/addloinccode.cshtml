<div id="addloincCode">
    <div class="modal-header">
        <h4 class="modal-title">
            <span>@L("AddLoincCode")</span>
        </h4>
    </div>
    <div class="row">
        <div class="modal-body ">
            <form form-validation name="addLoincCodeCreateForm" role="form" class="form-horizontal form-label-left" novalidate>
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("LoincCodeId")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon">CU</span>
                            <input type="text" class="form-control" required="required" data-validate-length-range="3,5" ng-model="vm.loincCode.loincCodeId" />
                        </div>
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("ShortName")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <input type="text" class="form-control" required="required" data-validate-length-range="5,60" ng-model="vm.loincCode.shortName" />
                    </div>
                </div>
                <div class="item form-group">
                    <label class="col-md-12 col-sm-12 col-xs-12">@L("LongCommonName")</label>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <textarea type="text" class="form-control" rows="5" required="required" data-validate-length-range="5,1000" ng-model="vm.loincCode.longCommonName" ></textarea>
                    </div>
                </div>


                <div class="item form-group" ng-show="vm.validationError.length > 0">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="panel panel-danger">
                            <div class="panel-heading">Please review the following field</div>
                            <div class="panel-body">
                                <ul>
                                    <li ng-repeat="message in vm.validationError">
                                        <span class="black">{{message}}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer noborder">
        <button type="submit" class="btn btn-default pull-right" ng-click="vm.close()">Cancel</button>
        <button type="submit" class="btn btn-success pull-right" ng-disabled="addLoincCodeCreateForm.$invalid" ng-click="vm.saveLoincCode('addmore')">Save and add another</button>
        <button type="submit" class="btn btn-success pull-right" ng-disabled="addLoincCodeCreateForm.$invalid" ng-click="vm.saveLoincCode()">Save</button>
    </div>
</div>
