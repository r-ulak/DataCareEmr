<div class="x_panel tile fixed_height_390" ng-controller="app.views.patient.procedureOrder as vm">
    <div class="x_title">
        <h2>
            ProcedureOrders
            <a class="abp-clickable blue margin-left10 margin-right10" title="@L("ProcedureOrderDetail")" ng-click="vm.openProcedureOrderDetailModal()"><i class="fa fa-info-circle text-primary"></i></a>
            <a class="abp-clickable blue" title="@L("AddProcedureOrder")" ng-click="vm.openAddProcedureOrderModal()"><i class="fa fa-plus-circle text-primary"></i></a>
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="table-responsive">
            <div class="col-sm-8 col-xs-8 col-md-8">
                <input ng-model="vm.searchQuery" placeholder="Global search" class="input-sm form-control" type="search" />
            </div>
            <div class="col-sm-4 col-xs-4 col-md-4">
                <button type="button" ng-click="vm.searchQuery = ''" class="btn btn-sm btn-primary">
                    <i class="fa fa-eraser margin-right5"></i>Clear Filter
                </button>
            </div>
            <table class="table table-hover table-striped" st-table="displayedCollection" st-safe-src="vm.procedureOrderData" sttablefilter="vm.searchQuery">
                <thead class="thead-inverse">
                    <tr class="abp-clickable">
                        <th st-sort="shortName">@L("Name")</th>
                        <th st-sort="priorityCodeName">@L("PriorityCodeName")</th>

                        <th st-sort="orderdByName">@L("OrderdByName")</th>
                        <th st-sort="statusCodeName">@L("StatusCodeName")</th>
                        <th st-sort="orderDate" st-sort-default="reverse">@L("OrderDate")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="procedureOrder in (displayedCollection)" class="abp-clickable" ng-click="vm.openProcedureOrderDetailModal()">
                        <td>{{procedureOrder.shortName}}</td>
                        <td ng-class="{'font-bold red': procedureOrder.priorityCodeName == 'High' }">{{procedureOrder.priorityCodeName}}</td>
                        <td>{{procedureOrder.orderdByName}}</td>
                        <td>{{procedureOrder.statusCodeName}}</td>
                        <td>{{procedureOrder.orderDate | utctolocal :'MM/DD/YY h:mm:ss a'}}</td>
                    </tr>
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="3" class="text-center">
                            <div st-pagination="" st-items-by-page="vm.itemsByPage" st-displayed-pages=""></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
