<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-5 col-xs-12">
                        <h2>
                            Patient Vitals <small></small>
                        </h2>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-5 col-xs-10" ng-controller="app.views.patientdata.patient as vm" ng-show="vm.patientData.display">
                        @Html.Partial("~/App/Main/views/patient/view/patientdemographic.cshtml")
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-2 col-xs-2">
                        <ul class="nav navbar-right panel_toolbox ">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="top_tiles" ng-controller="app.views.patientVital.vital as vm">
                    <div class="row">
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
                                <div class="count">{{vm.vital.bps}}/{{vm.vital.bpd}}</div>
                                <h4>
                                    BPS/BPD
                                </h4>
                                <p> <small> Systolic/Diastolic</small></p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-comments-o"></i></div>
                                <div class="count">{{vm.vital.weight}}</div>
                                <h4>Weight</h4>
                                <p> <small>Lorem ipsum psdea itgum rixt.</small></p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-sort-amount-desc"></i></div>
                                <div class="count">{{vm.vital.height}}</div>
                                <h4>Height</h4>
                                <p> <small>Lorem ipsum psdea itgum rixt.</small></p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-check-square-o"></i></div>
                                <div class="count">{{vm.vital.bmi}}</div>
                                <h4>BMI</h4>
                                <p> <small>Body Mass Index</small></p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-check-square-o"></i></div>
                                <div class="count">{{vm.vital.pulse}}</div>
                                <h4>Pulse</h4>
                                <p> <small>Pulse rate</small></p>
                            </div>
                        </div>
                        <div class="animated flipInY col-lg-2 col-md-2 col-sm-6 col-xs-12">
                            <div class="tile-stats">
                                <div class="icon"><i class="fa fa-check-square-o"></i></div>
                                <div class="count">{{vm.vital.oxygenSaturation}}</div>
                                <h4>O<sub>2</sub> Level</h4>
                                <p> <small>Oxygen Saturation Level</small></p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

