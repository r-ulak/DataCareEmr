<div id="allergydetail">
    <div class="modal-header">
        <h4 class="modal-title">
            <span>@L("AllergyDetail")</span>
        </h4>
    </div>
    <div class="row">
        <div class="modal-body ">
            <div class="row">
                <div class="col-sm-8 col-xs-8 col-md-8">
                    <input ng-model="vm.searchQuery" placeholder="Global search" class="input-sm form-control" type="search" />
                </div>
                <div class="col-sm-4 col-xs-4 col-md-4">
                    <button type="button" ng-click="vm.searchQuery = ''" class="btn btn-sm btn-primary">
                        <i class="fa fa-eraser margin-right5"></i>Clear Filter
                    </button>
                </div>
            </div>
            <div class="table-responsive">
                <table st-table="displayedCollection" st-safe-src="vm.allergyData" class="table" sttablefilter="vm.searchQuery">
                    <thead class="thead-inverse">
                        <tr class="abp-clickable">
                            <th class="col-md-2" st-sort="allergyName">@L("AllergyName")</th>
                            <th class="col-md-4" st-sort="reactionName">@L("ReactionName")</th>
                            <th class="col-md-2" st-sort="categoryName">@L("CategoryName")</th>
                            <th class="col-md-2" st-sort="allergyTypeName">@L("AllergyTypeName")</th>
                            <th class="col-md-1" st-sort="allergySeverityCodeName">@L("AllergySeverityCodeName")</th>
                            <th class="col-md-1" st-sort="status">@L("Status")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat-start="allergy in (displayedCollection)" class="abp-clickable" ng-click="allergy.expanded = !allergy.expanded ">
                            <td ng-class="{'font-bold red': allergy.priority < 5 && allergy.status == 'active' }">{{allergy.allergyName}}</td>
                            <td>{{allergy.reactionName}}</td>
                            <td><a class="blue" ng-click="vm.searchQuery = allergy.categoryName">{{allergy.categoryName}}</a></td>
                            <td><a class="blue" ng-click="vm.searchQuery = allergy.allergyTypeName">{{allergy.allergyTypeName}}</a></td>
                            <td><a class="blue" ng-click="vm.searchQuery = allergy.allergySeverityCodeName">{{allergy.allergySeverityCodeName}}</a></td>
                            <td><a class="blue" ng-click="vm.searchQuery = allergy.status">{{allergy.status}}</a></td>
                        </tr>
                        <tr ng-if="allergy.expanded" class="abp-clickable table-borderless" ng-repeat-end="">
                            <td colspan="6" class="noborder">
                                <form>
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="form-group">
                                                <small for="startDate">onset</small>
                                                <div class="input-prepend input-group">
                                                    <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                    <input date-range-picker ng-model="allergy.startDate" options="vm.datepickerOption" class="form-control has-feedback-left" name="startDate">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <div class="form-group">
                                                <small for="status">status</small>
                                                <select class="form-control" ng-model="allergy.status">
                                                    <option>active</option>
                                                    <option>expired</option>
                                                    <option>inactive</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-9 col-sm-9 col-xs-12">
                                            <div class="form-group">
                                                <small for="provider">source</small>
                                                <input type="text" disabled class="form-control" ng-model="allergy.provider">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <small for="note">notes</small>
                                            <textarea class="form-control" rows="5" ng-model="allergy.note"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3 ">
                                            <button type="submit" class="btn btn-sm btn-primary pull-right" ng-click="vm.update(allergy)">Save</button>
                                            <button type="submit" class="btn btn-sm btn-primary pull-right" ng-click="allergy.expanded = false">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </td>
                        </tr>
                        <tr ng-show="displayedCollection.length===0">
                            <td colspan="10">Loading please wait...</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="10" class="text-center">
                                <div st-pagination="" st-items-by-page="vm.itemsByPage" st-displayed-pages=""></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer noborder">
        <button type="button" class="btn btn-default" ng-click="vm.close()">@L("Close")</button>
    </div>
</div>