<div class="x_panel tile fixed_height_390" ng-controller="app.views.patientdata.allergy as vm">
    <div class="x_title">
        <h2>
            Allergies
            <a class="abp-clickable blue margin-left10 margin-right10" title="@L("AllergyDetail")" ng-click="vm.openAllergyDetailModal()"><i class="fa fa-info-circle text-primary"></i></a>
            <a class="abp-clickable blue" title="@L("AddAllergy")" ng-click="vm.openAddAllergyModal()"><i class="fa fa-plus-circle text-primary"></i></a>

        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="table-responsive">
            <div class="col-sm-8 col-xs-8 col-md-8">
                <input ng-model="vm.searchQuery" placeholder="Global search" class="input-sm form-control" type="search" />
            </div>
            <div class="col-sm-4 col-xs-4 col-md-4">
                <button type="button" ng-click="vm.searchQuery = ''" class="btn btn-sm btn-primary">
                    <i class="fa fa-eraser margin-right5"></i>Clear Filter
                </button>
            </div>
            <table class="table table-hover table-striped" st-table="displayedCollection" st-safe-src="vm.allergyData" sttablefilter="vm.searchQuery">
                <thead class="thead-inverse">
                    <tr class="abp-clickable">
                        <th st-sort="allergyName">@L("AllergyName")</th>
                        <th st-sort="reactionName">@L("ReactionName")</th>
                        <th st-sort="allergySeverityCodeName">@L("AllergySeverityCodeName")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-show="vm.allergyData.length==0">
                        <td colspan="3">
                            <h4>No Allergy recorded</h4>
                        </td>
                    </tr>
                    <tr ng-repeat="allergy in (displayedCollection)" class="abp-clickable" ng-click="vm.openAllergyDetailModal()">
                        <td ng-class="{'font-bold red': allergy.priority < 5 && allergy.status == 'active' }">{{allergy.allergyName}}</td>
                        <td>{{allergy.reactionName}}</td>
                        <td>{{allergy.allergySeverityCodeName}}</td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-center">
                            <div st-pagination="" st-items-by-page="vm.itemsByPage" st-displayed-pages=""></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
